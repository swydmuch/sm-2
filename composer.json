{
    "name": "swydmuch/sm-2",
    "description": "PHP implementation of SuperMemo 2.0 Algorithm which improves the memorization of knowledge",
    "type": "library",
    "require": {
        "php": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "SWydmuch\\SM2\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SWydmuch\\SM2\\Tests\\" : "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "*",
        "infection/infection": "*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
